<resources>

    <!-- Base application theme -->
    <style name="Base.Theme.CapstoneBangkit" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <!-- General text style -->
    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/argent</item>
    </style>

    <!-- Sub-heading text style -->
    <style name="TextContent.SubHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/argent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Body text style -->
    <style name="TextContent.BodyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/argent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Chip text style -->
    <style name="TextContent.Chip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Black text style -->
    <style name="TextContent.Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Activity title text style -->
    <style name="TextContent.ActivityTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Bold text style -->
    <style name="TextContent.Bold">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Bold heading text style -->
    <style name="TextContent.Bold.Heading">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!-- Bold sub-heading text style -->
    <style name="TextContent.Bold.SubHeading">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Bold caption text style -->
    <style name="TextContent.Bold.Caption">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Medium text style -->
    <style name="TextContent.Medium">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Semi-bold text style -->
    <style name="TextContent.SemiBold">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Poppins White styles -->
    <style name="TextContent.Bold.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent.Medium.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent.SemiBold.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Poppins Light styles -->
    <style name="TextContent.Light">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.Light.Heading">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">34sp</item>
    </style>

    <!-- News Activity Theme -->
    <style name="Theme.NewsActivity" parent="Base.Theme.CapstoneBangkit">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="background">@color/white</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="backgroundTint">@color/white</item>
        <item name="itemTextAppearanceInactive">@color/black</item>
        <item name="itemBackground">@drawable/bg_bottom_nav_item</item>
        <item name="itemIconTint">@drawable/bg_nav_item_color</item>
        <item name="itemTextColor">@drawable/bg_nav_item_color</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Input">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/lightGray</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="android:textAppearance">@style/TextContent.Chip</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Application theme -->
    <style name="Theme.CapstoneBangkit" parent="Base.Theme.CapstoneBangkit" />

</resources>